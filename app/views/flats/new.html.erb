<%= simple_form_for [@flat] do |f| %>
  <%= f.input :title %>
  <%= f.input :address %>
  <%= f.input :price, as: :integer %>
  <%= f.input :description %>
  <%= f.input :number_of_rooms, as: :numeric %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit "Add", class: "btn btn-primary" %>
<% end %>
<p><%= link_to "Back to flats list", flats_path %></p>
